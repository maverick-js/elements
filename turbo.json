{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "bundle": {
      "inputs": ["src/**", "rollup.config.js"],
      "dependsOn": ["clean"],
      "outputs": ["dist-npm"]
    },
    "types": {
      "dependsOn": ["^types"],
      "inputs": ["src/**"],
      "outputs": ["types/**", "dist-npm/**/*.d.ts", "tsconfig.build.tsbuildinfo"]
    },

    "clean": {
      "cache": false
    },
    "format": {
      "inputs": ["src/**"]
    },
    "test": {
      "inputs": ["src/**", "tests/**", "vite.config.ts"]
    }
  }
}
