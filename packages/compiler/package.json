{
  "name": "@maverick-js/compiler",
  "license": "MIT",
  "version": "0.43.2",
  "type": "module",
  "types": "src/index.ts",
  "module": "src/index.ts",
  "sideEffects": false,
  "contributors": [
    "Rahim Alwer <rahim.alwer@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/maverick-js/maverick.git",
    "directory": "packages/compiler"
  },
  "bugs": {
    "url": "https://github.com/maverick-js/maverick/issues"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "build": "pnpm clean && pnpm types && rollup -c",
    "clean": "rimraf dist-npm",
    "types": "tsc -p tsconfig.build.json",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "format": "prettier src --write --loglevel warn"
  },
  "dependencies": {
    "@maverick-js/logger": "workspace:*",
    "@maverick-js/std": "workspace:*",
    "@maverick-js/ts": "workspace:*"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "html-entities": "^2.5.2",
    "pathe": "^1.1.2",
    "rimraf": "^5.0.10",
    "rollup": "^4.24.0",
    "rollup-plugin-dts": "^6.1.1",
    "rollup-plugin-esbuild": "^6.1.1",
    "typescript": "^5.6.3",
    "vite": "^5.4.9",
    "vitest": "^2.1.3"
  },
  "exports": {
    ".": "./src/index.ts",
    "./vite": "./src/vite.ts"
  },
  "$types": "index.d.ts",
  "$exports": {
    ".": {
      "types": "./index.d.ts",
      "default": "./index.js"
    },
    "./vite": {
      "types": "./vite.d.ts",
      "default": "./vite.js"
    },
    "./types/*": "./types/*",
    "./package.json": "./package.json"
  },
  "publishConfig": {
    "access": "public"
  }
}
