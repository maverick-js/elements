{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "es2020"],
    "jsx": "preserve",
    "jsxImportSource": "maverick.js",
    "paths": {
      "maverick.js": ["./src/core"],
      "maverick.js/element": ["./src/element"],
      "maverick.js/element/server": ["./src/element/server"],
