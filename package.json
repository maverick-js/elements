{
  "name": "maverick-workspace",
  "version": "0.43.2",
  "license": "MIT",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run bundle types --filter=./packages/*",
    "watch": "turbo watch bundle types --filter=./packages/*",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "pnpm build && pnpm build:cli && node ./.scripts/release.js"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^18.0.3",
    "conventional-changelog-cli": "^4.1.0",
    "enquirer": "^2.3.6",
    "execa": "^7.0.0",
    "fs-extra": "^11.2.0",
    "kleur": "^4.1.5",
    "minimist": "^1.2.7",
    "prettier": "^3.1.0",
    "semver": "^7.3.8",
    "simple-git-hooks": "^2.8.0",
    "turbo": "^2.0.12",
    "typescript": "^5.6.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npx --no-install lint-staged",
    "commit-msg": "npx --no -- commitlint --edit $1"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx,md,json}": "prettier --write"
  },
  "volta": {
    "node": "16.15.1"
  },
  "packageManager": "pnpm@7.2.1"
}
